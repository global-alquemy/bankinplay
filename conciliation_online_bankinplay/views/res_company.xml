<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="bankinplay_view_company_form">
        <field name="name">bankinplay.view.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="bankinplay" string="BankInPlay">
                    <group>
                        <group name="bankinplay" string="BankInPlay Config">
                            <field name="bankinplay_apikey"/>
                            <field name="bankinplay_apisecret"/>
                            <field name="bankinplay_start_date"/>
                            <field name="bankinplay_journal_ids" widget="many2many_tags"/>
                            <field name="bankinplay_company_id" readonly="1"></field>
                            <field name="bankinplay_enabled" readonly="0"></field>

                            <button name="test_bankinplay_connection" type="object" string="Test Connection" icon="fa-television"/>
                        </group>

                        <group>
                            <separator string="Plan contable"></separator>
                            <br/>
                            <button name="export_account_plan" type="object" string="Export Account Plan"/>
                            <br/>

                            <separator string="Plan analÃ­tico"></separator>
                            <field name="bankinplay_analytic_plan_id" readonly="0"></field>
                            <field name="bankinplay_analytic_line_id" readonly="0"></field>
                            <button name="export_analytic_plan" type="object" string="Export Analytic Plan"/>
                            <br/>

                            <separator string="Terceros"></separator>
                            <field name="bankinplay_manage_third_accounts"></field>
                            <field name="bankinplay_last_syncdate"></field>
                            <button name="bankinplay_export_documents" type="object" string="Export Documents"/>
                            <button name="bankinplay_import_documents" type="object" string="Import Documents"/>


                            <separator string="Apuntes contables"></separator>
                            <br/>
                            <button name="bankinplay_import_account_moves" type="object" string="Import Account Moves"/>
                            <button name="bankinplay_export_account_move_line" type="object" string="Exportar Apuntes contables"/>
                        </group>
                        
                    </group>
                    <group>
                        

                    </group>

                </page>
            </notebook>

        </field>
    </record>

</odoo>
